@{
    ViewBag.title = "Confirmation";
}

<div class="row">
    <div class="col-md-12">

        <form method="post" asp-action="AuthForgotPassword">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <h4>We will send the password reset link to @ViewBag.userEmail. Click send to continue.</h4>
            </div>

            <button type="submit" class="btn btn-primary">Send</button>
        </form>

        <a class="" asp-controller="Account" asp-action="Profile">Cancel</a>

    </div>
</div>